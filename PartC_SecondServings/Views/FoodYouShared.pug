doctype html
head
  meta(charset='UTF-8')
  title Second Servings- Food You Shared
  link(rel='stylesheet' href='../Static/SecondServings_CSS.css')
  link(rel='icon' type='image/x-icon' href='../Static/images/logo.png')
  img.icon(src='../Static/images/logo.png' alt='logo')
body
  include MenuBar_User.pug

  h2 Second Servings
  h3 Food You Shared

  .container_grid
    #username.input-group
      input#username.profile_data(type='text'  value= user  readonly)
    p
    .container_scrollbar
      each post in posts
        .container2sides_watch
          .left_viewPost
            a(href=`/viewPost?post=${post.postNum}`)
              img(src=post.photo width='150' height='140')
          .right_watch
            .row_profileData
              .input-group
                img(src='../Static/images/food.png' alt='logo' width='40' height='40')
                input#expiration_date.data_readonly(type='text' value=post.title readonly)
            .row_profileData
              .input-group
                img(src='../Static/images/date.png' alt='logo' width='40' height='40')
                input#expiration_date.data_readonly(type='text' value=post.postDate readonly)
            .row_profileData
              .input-group
                img(src='../Static/images/group.png' alt='logo' width='40' height='40')
                input#expiration_date.data_readonly(type='number' value=post.pickupCount readonly)

  script(src='../Static/JS.js' type='module')
